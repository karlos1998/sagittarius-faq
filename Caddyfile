:80 {
    root * /usr/share/caddy
    
    # Enable file serving
    file_server
    
    # SPA fallback - try file, then directory with index.html, then 200.html
    try_files {path} {path}/index.html /200.html
    
    # Enable gzip compression
    encode gzip
    
    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Service Worker - no cache, always fresh (MUST be before @static)
    @sw path /sw.js
    @workbox path_regexp workbox ^/workbox-.*\.js$
    header @sw Cache-Control "no-cache, no-store, must-revalidate"
    header @workbox Cache-Control "no-cache, no-store, must-revalidate"
    
    # Manifest files
    @manifest {
        path *.webmanifest
    }
    header @manifest {
        Content-Type "application/manifest+json"
        Cache-Control "public, max-age=604800"
    }
    
    # PDF files - cache for longer
    @pdf {
        path *.pdf
    }
    header @pdf Cache-Control "public, max-age=2592000"
    
    # Cache static assets (but not Service Worker files)
    @static {
        not path /sw.js
        not path_regexp ^/workbox-.*\.js$
        path *.css *.js *.jpg *.jpeg *.png *.gif *.ico *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
}
