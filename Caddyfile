:80 {
    root * /usr/share/caddy
    
    # Enable file serving
    file_server
    
    # SPA fallback - serve 200.html for all routes (Nuxt static generation)
    try_files {path} /200.html
    
    # Enable gzip compression
    encode gzip
    
    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Service Worker - no cache, always fresh
    @sw {
        path /sw.js /workbox-*.js
    }
    header @sw Cache-Control "no-cache, no-store, must-revalidate"
    
    # Manifest files
    @manifest {
        path *.webmanifest
    }
    header @manifest {
        Content-Type "application/manifest+json"
        Cache-Control "public, max-age=604800"
    }
    
    # PDF files - cache for longer
    @pdf {
        path *.pdf
    }
    header @pdf Cache-Control "public, max-age=2592000"
    
    # Cache static assets
    @static {
        path *.css *.js *.jpg *.jpeg *.png *.gif *.ico *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
}
